{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "..",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": ["index-simple.ts", "tools-simple.ts"],
  "exclude": ["node_modules", "dist", "../src/app", "../src/components"]
}
